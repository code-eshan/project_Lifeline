<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DocAppointmentList"
    android:background="@drawable/grad_bg">

    <TextView
        android:id="@+id/tvDocAppointmentList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="144dp"
        android:layout_marginEnd="76dp"
        android:layout_marginRight="76dp"
        android:fontFamily="@font/julius_sans_one"
        android:text="@string/doctor_appointment"
        android:textColor="@color/white"
        android:textSize="35sp"
        app:fontFamily="@font/julius_sans_one"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDisplayAppointments"
        android:layout_width="301dp"
        android:layout_height="85dp"
        android:layout_marginTop="172dp"
        android:layout_marginEnd="52dp"
        android:layout_marginRight="52dp"
        android:text="Doctor's Appointment List will be displayed here..."
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDocAppointmentList" />

</androidx.constraintlayout.widget.ConstraintLayout>