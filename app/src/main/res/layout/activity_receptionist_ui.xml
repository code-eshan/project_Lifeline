<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad_bg"
    tools:context=".ReceptionistUI">

    <TextView
        android:id="@+id/tvRecWelcomeUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:fontFamily="@font/julius_sans_one"
        android:text="Welcome Receptionist"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:fontFamily="@font/julius_sans_one"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnRecProfile"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="56dp"
        android:layout_marginRight="56dp"
        android:background="@drawable/button_round"
        android:backgroundTint="#D63939"
        android:drawableLeft="@drawable/profile"
        android:drawableTint="@color/white"
        android:paddingLeft="80dp"
        android:paddingRight="80dp"
        android:text="View Profile"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRecWelcomeUser" />

    <Button
        android:id="@+id/btnRecViewAppointments"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="56dp"
        android:layout_marginRight="56dp"
        android:background="@drawable/button_round"
        android:backgroundTint="#18648D"
        android:drawableLeft="@drawable/appointment"
        android:drawableTint="@color/white"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:text="View Appointments"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRecProfile" />

    <Button
        android:id="@+id/btnRecViewDoctors"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="56dp"
        android:layout_marginRight="56dp"
        android:background="@drawable/button_round"
        android:backgroundTint="#18648D"
        android:drawableLeft="@drawable/doctor"
        android:drawableTint="@color/white"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:text="Doctors List"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRecProfile" />

</androidx.constraintlayout.widget.ConstraintLayout>

