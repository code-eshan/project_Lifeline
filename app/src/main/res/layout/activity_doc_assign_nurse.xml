<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DocAssignNurse"
    android:background="@drawable/grad_bg">

    <TextView
        android:id="@+id/tvDocAssignNurse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        android:fontFamily="@font/julius_sans_one"
        android:text="@string/assignNurse"
        android:textColor="@color/white"
        android:textSize="35sp"
        app:fontFamily="@font/julius_sans_one"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDisplayAppointments"
        android:layout_width="264dp"
        android:layout_height="92dp"
        android:layout_marginTop="136dp"
        android:layout_marginEnd="72dp"
        android:layout_marginRight="72dp"
        android:text="Assigning nurse to a particular appointment"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDocAssignNurse" />

</androidx.constraintlayout.widget.ConstraintLayout>