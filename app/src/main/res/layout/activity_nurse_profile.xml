<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NurseMainUI"
    android:background="@drawable/grad_bg"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="50dp"
            android:orientation="vertical"

            >

            <TextView
                android:id="@+id/tvNurseProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:text="@string/nurProfile"
                android:textColor="@color/white"
                android:textSize="35sp"
                app:fontFamily="@font/julius_sans_one" />

            <TextView
                android:id="@+id/tvRecStaffID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/staffID"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/etNurStaffID"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edit_round"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingLeft="5dp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvNurFirstName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/fname"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/etNurFirstName"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edit_round"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingLeft="5dp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvNurLastName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/lname"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/etNurLastName"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edit_round"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingLeft="5dp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvNurNic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/nic"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/etNurNic"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edit_round"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingLeft="5dp"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/tvNurPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/password"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/etNurPassword"
                android:layout_width="200dp"
                android:layout_height="27dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edit_round"
                android:drawableRight="@drawable/show_password"
                android:drawableTint="@color/gradStart"
                android:ems="10"
                android:inputType="textPassword"
                android:paddingLeft="5dp"
                android:paddingRight="10dp"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnUpdateNurse"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="56dp"
                android:layout_marginRight="56dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_round"
                android:backgroundTint="#18648D"
                android:drawableLeft="@drawable/update"
                android:drawableTint="@color/white"
                android:paddingLeft="100sp"
                android:paddingRight="100sp"
                android:text="@string/updateDetails"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnDeleteNurse"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="56dp"
                android:layout_marginRight="56dp"
                android:layout_marginBottom="60dp"
                android:background="@drawable/button_round"
                android:backgroundTint="#CA1C1C"
                android:drawableLeft="@drawable/update"
                android:drawableTint="@color/white"
                android:paddingLeft="100sp"
                android:paddingRight="100sp"
                android:text="@string/deleteAcct"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>